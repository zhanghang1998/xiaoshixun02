<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@drawable/dai03"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoActivity">

    <!-- 手机号 -->
    <LinearLayout
        android:id="@+id/linearLayout_phone_two"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_phone_two"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/login_icon_phone_n_xhdpi" />

        <EditText
            android:id="@+id/editText_phone_two"
            android:layout_width="260dp"
            android:textColor="#FFF"
            android:layout_marginLeft="20dp"
            android:layout_height="20dp"
            android:background="@null"
            android:hint="手机号"
            android:textColorHint="#FFF"
            android:inputType="number"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:background="#C0C0C0"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout_phone_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <!-- 验证码 -->
    <LinearLayout
        android:id="@+id/linearLayout_yanzheng_two"
        android:layout_below="@+id/linearLayout_phone_two"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_yanzheng_two"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/yanzheng1" />

        <EditText
            android:id="@+id/editText_yanzheng_two"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="20dp"
            android:background="@null"
            android:hint="验证码"
            android:textColorHint="#FFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_yanzheng_two"
            android:text="获取验证码"
            android:textSize="10sp"
            android:textColor="#FFF"
            android:src="@drawable/login_icon_eye_n_xhdpi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:background="#C0C0C0"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout_yanzheng_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!-- 密码号 -->
    <LinearLayout
        android:id="@+id/linearLayout_password_two"
        android:layout_below="@+id/linearLayout_yanzheng_two"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_suo_two"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/login_icon_lock_n_hdpi" />

        <EditText
            android:id="@+id/editText_password_two"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="20dp"
            android:background="@null"
            android:hint="登录密码"
            android:textColorHint="#FFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView_eye_two"
            android:src="@drawable/login_icon_eye_n_xhdpi"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <View
        android:background="#C0C0C0"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout_password_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!-- 已有账户? 立即登录 -->
    <LinearLayout
        android:id="@+id/linearLayout_check_two"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:gravity="right"
        android:layout_below="@+id/linearLayout_password_two"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="已有账户? 立即登录"
            android:textSize="14sp"
            android:id="@+id/text_yiyou_two"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!--登录按钮-->
    <Button
        android:id="@+id/button_zhuce_two"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp"
        android:background="@drawable/login_btn"
        android:text="注册"
        android:textColor="#FF5F71"
        android:textSize="18sp" />


</RelativeLayout>