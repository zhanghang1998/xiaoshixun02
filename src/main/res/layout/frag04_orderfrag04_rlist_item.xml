<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/home_rexiao_shap"
    android:orientation="vertical">



    <!-- 订单列表格 , 头部  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="订单号:" />
        <TextView
            android:id="@+id/text_frag04_orderfrag02_addNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_weight="1"
            android:text="TextView" />

        <ImageView
            android:id="@+id/text_frag04_orderfrag02_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/common_btn_more_n" />

    </LinearLayout>

    <!-- 订单列表格 ,  第一格  -->
    <RelativeLayout
        android:id="@+id/relativeLayout01_orderfrag02"
        android:layout_marginTop="10dp"
        android:background="@drawable/frag04list_viewpager_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/frag04_orderfrag02_goods_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/frag03_shop_cart_goods_check_single"
            android:adjustViewBounds="true"
            android:minHeight="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/frag04_orderfrag02_goods_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/frag04_orderfrag02_goods_item_img"
            android:padding="5dp"
            android:singleLine="true"
            android:text="标题"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/frag04_orderfrag02_goods_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frag04_orderfrag02_goods_item_title"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/frag04_orderfrag02_goods_item_img"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="￥价格"
            android:textColor="#ff0606" />

        <TextView
            android:id="@+id/frag04_orderfrag02_add_sub_layout"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/frag04_orderfrag02_goods_item_title"
            android:background="@drawable/ordefrag02_shape_btn"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="36dp"
            android:padding="6dp"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:text="去评价"
            android:layout_toRightOf="@+id/frag04_orderfrag02_goods_item_price">
        </TextView>

    </RelativeLayout>

    <!-- 订单列表格 ,  第二格  -->
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/frag04list_viewpager_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/frag04_orderfrag02_goods_item_img02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/frag03_shop_cart_goods_check_single"
            android:adjustViewBounds="true"
            android:minHeight="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/frag04_orderfrag02_goods_item_title02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/frag04_orderfrag02_goods_item_img02"
            android:padding="5dp"
            android:singleLine="true"
            android:text="标题"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/frag04_orderfrag02_goods_item_price02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frag04_orderfrag02_goods_item_title02"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/frag04_orderfrag02_goods_item_img02"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="￥价格"
            android:textColor="#ff0606" />

        <TextView
            android:id="@+id/frag04_orderfrag02_add_sub_layout02"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/frag04_orderfrag02_goods_item_title02"
            android:background="@drawable/ordefrag02_shape_btn"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="36dp"
            android:padding="6dp"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:text="去评价"
            android:layout_toRightOf="@+id/frag04_orderfrag02_goods_item_price02">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_frag04_orderfrag02_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:text="2018-12-13 20:08"
            android:textColor="#666666"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>
