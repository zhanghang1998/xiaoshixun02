<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyMessageActivity">

        <!--android:textStyle="bold"  TextView 字体加粗-->
    <TextView
        android:id="@+id/textView2"
        android:layout_marginTop="40dp"
        android:textSize="24sp"
        android:textColor="#666666"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的资料" />

    <!-- 我的头像 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/frag04_list_head_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="我的头像" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imageView_myMessage_head"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>

        <View
            android:background="#666666"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <!-- 我的姓名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="我的昵称" />

            <TextView
                android:id="@+id/textView_myMessage_name"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="Wy_xsl_"
                android:layout_height="30dp" />

        </LinearLayout>

        <View
            android:background="#666666"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <!-- 我的姓名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="我的密码" />

            <TextView
                android:id="@+id/textView_myMessage_phone"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="******"
                android:layout_height="30dp" />

        </LinearLayout>

        <View
            android:background="#666666"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="1dp"/>


    </LinearLayout>

</LinearLayout>