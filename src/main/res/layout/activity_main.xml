<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dai03"
    android:padding="2dp"
    tools:context=".MainActivity">

    <!-- 手机号 -->
    <LinearLayout
        android:id="@+id/linearLayout_phone"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/login_icon_phone_n_xhdpi" />

        <EditText
            android:id="@+id/editText_phone"
            android:layout_width="220dp"
            android:textColor="#FFF"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:background="@null"
            android:hint="手机号"
            android:textColorHint="#FFF"
            android:inputType="number"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:background="#C0C0C0"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout_phone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!-- 密码号 -->
    <LinearLayout
        android:id="@+id/linearLayout_password"
        android:layout_below="@+id/linearLayout_phone"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_suo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/login_icon_lock_n_xhdpi" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:background="@null"
            android:hint="登录密码"
            android:textColorHint="#FFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView_mian_eye"
            android:src="@drawable/login_icon_eye_n_xhdpi"
            android:layout_width="24dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:background="#C0C0C0"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!-- 记住密码,注册 -->
    <LinearLayout
        android:id="@+id/linearLayout_check"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_below="@+id/linearLayout_password"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_jizhu"
            android:layout_marginTop="4dp"
            android:background="@drawable/ckeck_login"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:button="@null"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/text_ji"
            android:layout_weight="1"
            android:text="记住密码"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="快速注册"
            android:textSize="14sp"
            android:id="@+id/text_zhuce"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!--登录按钮-->
    <Button
        android:id="@+id/button_denglu"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/login_btn"
        android:text="登录"
        android:textColor="#FF5F71"
        android:textSize="18sp" />

</RelativeLayout>