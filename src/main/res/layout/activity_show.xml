<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".ShowActivity">

    <FrameLayout
        android:id="@+id/fragLayout_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/radioGroup_show"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton01_show"
            style="@style/main_bottom_btn_style"
            android:checked="true"
            android:drawableTop="@drawable/show_home_rb" />

        <RadioButton
            android:id="@+id/radioButton02_show"
            style="@style/main_bottom_btn_style"
            android:drawableTop="@drawable/show_circle_rb" />

        <RadioButton
            android:id="@+id/radioButton03_show"
            style="@style/main_bottom_btn_style"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/commom_tab_btn_shopping_cart_n" />

        <RadioButton
            android:id="@+id/radioButton04_show"
            style="@style/main_bottom_btn_style"
            android:drawableTop="@drawable/show_list_rb" />

        <RadioButton
            android:id="@+id/radioButton05_show"
            style="@style/main_bottom_btn_style"
            android:drawableTop="@drawable/show_my_rb" />
    </RadioGroup>

</RelativeLayout>