<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/LinearLayout"
    android:padding="2dp"
    tools:context=".SearchActivity">

    <LinearLayout
        android:id="@+id/linearLayout_home_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="33dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/common_nav_btn_menu_n" />

        <EditText
            android:id="@+id/editText_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/frag01_edittext_sousuo_shap"
            android:ems="10"
            android:hint="请输入您要搜索的商品"
            android:paddingLeft="20dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_search_sousuo_refresh"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bitmap"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="热销新品"
            android:textColor="#FF7F57"
            android:textSize="16sp" />

    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:id="@+id/xRecyclerView_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>