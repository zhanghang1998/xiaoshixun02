<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/frag04list_viewpager_shape"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MyAddressActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView_footmark"
        android:layout_width="220dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/textAddress_count_myFootmark_rlist"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#666666"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPrice_myFootmark_rlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#F00"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/textNum_myFootmark_rlist"
            android:textSize="10sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/textTime_myFootmark_rlist"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#666666"
        android:text="TextView" />

</LinearLayout>